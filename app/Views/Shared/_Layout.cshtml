<!DOCTYPE html>
<html lang="pt" class="h-100"> <!-- Adicionado h-100 para o layout de altura total (necessário para o footer fixo) -->
    <head>
        <!-- Metadados básicos -->
        <meta charset="utf-8" />
        <!-- Meta tag para responsividade, essencial para o funcionamento do Bootstrap -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Título dinâmico da página-->
        <title>@ViewData["Title"] - SpeedRunningHub</title>

        <!-- CSS do Bootstrap via CDN para estilos modernos e responsivos -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        
        <!-- Link para folha de estilos principal (pode ser usado para personalizações sobre o Bootstrap) -->
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet">

        <!-- CSS do Bootstrap via CDN -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" ...>
    </head>
    <body class="d-flex flex-column h-100">
        <header>
            <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom box-shadow mb-3" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">SpeedRunningHub</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Início</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Jogos
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="SuperMario64">Super Mario 64</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Minecraft">Minecraft</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Celeste">Celeste</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="HollowKnight">Hollow Knight</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="DarkSouls">Dark Souls</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Submit">Submeter Speedrun</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="About">Sobre</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- flex-shrink-0 prevents the main content from shrinking when the footer appears -->
        <main role="main" class="pb-3 flex-shrink-0">
            <div class="container">
                @RenderBody()
            </div>
        </main>

        <!-- mt-auto pushes the footer to the bottom of the flex container -->
        <footer class="footer mt-auto border-top text-muted bg-light py-3">
            <div class="container">
                &copy; 2024 - SpeedRunningHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>