@{
    ViewData["Title"] = "Submeter Speedrun";
    var games = ViewBag.Games as List<string>;
    var categories = ViewBag.Categories as List<string>;
}
<div class="form-section">
    <h2 style="text-align:center;">Submeter Speedrun</h2>
    @if (ViewBag.Success != null)
    {
        <div class="form-msg-success">@ViewBag.Success</div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="form-msg-error">@ViewBag.Error</div>
    }
    <form asp-action="Submit" method="post" id="speedrunForm">
        <select class="form-input" id="GameName" name="GameName" required>
            <option value="">Selecione o Jogo</option>
            @foreach (var game in games ?? new List<string>())
            {
                <option value="@game">@game</option>
            }
        </select>
        <select class="form-input" id="Category" name="Category" style="display:none;" required>
            <option value="">Selecione a Categoria</option>
            @foreach (var cat in categories ?? new List<string>())
            {
                <option value="@cat">@cat</option>
            }
        </select>
        <input type="text" class="form-input" id="Country" name="Country" placeholder="País" required />
        <input type="text" class="form-input" id="Platform" name="Platform" placeholder="Plataforma" required />
        <input type="text" class="form-input" id="Time" name="Time" placeholder="Tempo (hh:mm:ss)" required />
        <input type="url" class="form-input" id="VideoUrl" name="VideoUrl" placeholder="URL do Vídeo" required />
        <input type="text" class="form-input" id="RunnerName" name="RunnerName" placeholder="Nome do Runner" required />
        <button type="submit" class="form-btn">Submeter</button>
    </form>
    <div id="jsError" class="form-msg-error" style="display:none;"></div>
</div>
